---
layout: layout/post.njk

title: "POK de la promo 2022-2023"
tags: ['index']
---

{% set promo = "2022-2023" %}

<div class="my-3 px-2 p-1 border-solid border-2 rounded relative">
    <div class="text-3xl mb-3">
        Par auteurs
    </div>
    <ul class="flex flex-wrap not-prose list-none my-1 mx-0 px-1 gap-1">
        {% set types = [promo] %}
        {% set types = (types.push('POK'), types) %}

        {% for cours in collections.index | sort | reverse %}
            {% set c = 0 %}
            {% for tag in cours.data.tags %}
                {% for type in types %}
                    {% if tag == type %}
                        {% set c = c + 1 %}
                    {% endif %}
                {% endfor %}
            {% endfor %}
            {% if c == types.length %}
                <li class="relative rounded-full border-blue-200 border-2 py-2 px-4 m-1 flex items-center">
                    <svg class="h-4 mr-3 fill-blue-700" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512l388.6 0c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304l-91.4 0z"/></svg>
                    <a href="{{ cours.url  }}" class="underline decoration-2 decoration-blue-500 hover:decoration-blue-700 hover:text-blue-700">{{cours.data.authors}}</a>
                </li>

            {% endif %}
        {% endfor %}
    </ul>
</div>

{% for temps in[1, 2, 3] %}
    <div class="my-3 px-2 p-1 border-solid border-2 rounded relative">
        <div class="text-3xl mb-3">
        Temps {{ temps }}
        </div>
        <ul class="grid md:grid-cols-2 not-prose list-none my-1 mx-0 px-1 gap-1">
            {% set types = [promo] %}
            {% set types = (types.push('temps ' + temps), types) %}

            {% for cours in collections.POK | sort %}
                {% set c = 0 %}
                {% for tag in cours.data.tags %}
                    {% for type in types %}
                        {% if tag == type %}
                            {% set c = c + 1 %}
                        {% endif %}
                    {% endfor %}
                {% endfor %}
                {% if c == types.length %}
                    <li class="m-3 p-3 border-solid border-2 rounded relative flex flex-col">
                        <div class="text-xl mb-3">
                            <a href="{{ cours.url  }}">{{cours.data.title}}</a>
                        </div>
                        {% if cours.data.résumé %}
                            <span class="h-full">{{ cours.data.résumé }}</span>
                        {% else %}
                            <span class="h-full"><i>MON de temps {{ temps }}.</i></span>
                        {% endif %}
                        <div class="flex flex-wrap flex-row justify-between items-end not-prose list-none mt-3 mb-1 mx-0 px-1 gap-1">
                            <span class="bg-blue-200 rounded-full px-2">{{cours.data.authors}}</span>
                            <span class="bg-purple-200 rounded-full px-2">{{ cours.data.date | dateFormat("dd/MM/yyyy") }}</span>
                        </div>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
{% endfor %}