---
layout: layout/index.njk
title: do-it

eleventyNavigation:
  key: home

---

{% set post= "" %}
{% for page in collections.index | eleventyNavigation(eleventyNavigation.key) %}
  {%- for index in collections.index -%}
    {% if index.url == page.url %}
      {% set post = index %}
    {% endif %}
  {%- endfor -%}
  
  {% if post.data.tags %}
    <div class="my-3 px-2 p-1 border-solid border-2 rounded">
      <div class="text-3xl mb-3">
        <a href="{{ post.url | url }}">{{ post.data.title }}</a>
      </div>
      <div class=" pt-1 px-4 flex items-top">
        <div class="flex-none pr-1">Résumé : </div>
        <div class="pl-2 m-0 grow quote">

          {% résumé post %}

        </div>
      </div>

    </div>

  {% endif %}
{% endfor %}