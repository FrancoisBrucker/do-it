{% for cours in collections.monJBD %}
    
    <div class="my-3 px-2 p-1 border-solid border-2 rounded">
      <div class="text-3xl mb-3">
        <a href="{{ cours.url | url }}">{{ cours.data.title }}</a>
      </div>
      <div class=" px-4 flex items-center">
        <div>Auteurs : </div>
        <ul class="flex not-prose list-none my-0 last:after:content-['•'] last:after:px-1 mx-0 px-1">
          {% for auteur in cours.data.authors | sort %}
              <li class="before:content-['•'] before:px-1">{{ auteur }}</li>
          {% endfor %}
        </ul>
      </div>
      <div class=" pt-1 px-4 flex items-top">
        <div class="flex-none">Résumé : </div>
        <div class="pl-2 m-0 grow quote">

          {% résumé cours %}

        </div>
      </div>
    </div>

{% endfor %}
