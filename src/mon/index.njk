---
layout: layout/post.njk

title: "MON"
tags: ['index']

order: 3
resume: 'Monitoring of Novelties. Apprentissage en autonomie tutorée.'
---

<div class="my-3 px-2 p-1 border-solid border-2 rounded relative">
    <div class="text-3xl mb-3">
        Par Promo
    </div>
    <ul>
        <li>
            <a href="./2023-2024">2023-2024</a>
        </li>

        <li>
            <a href="./2022-2023">2022-2023</a>
        </li>
    </ul>
</div>

<div class="my-3 px-2 p-1 border-solid border-2 rounded relative">
    <div class="text-3xl mb-3">
        Par auteurs
    </div>
    <ul>
        {% set types = ['MON'] %}

        {% for cours in collections.index | sort | reverse %}
            {% set c = 0 %}
            {% for tag in cours.data.tags %}
                {% for type in types %}
                    {% if tag == type %}
                        {% set c = c + 1 %}
                    {% endif %}
                {% endfor %}
            {% endfor %}
            {% if c == types.length %}
                <li class="relative">
                    <a href="{{ cours.url  }}">{{cours.data.authors}}
                    </a>

                        {% if cours.inputPath | getValueFromPath('/', 2) == 'promo' %}
                            {% set year = cours.inputPath | getValueFromPath('/', 3) %}
                            {% if year !== 'index.njk' and year !== 'index.md' %}
                                <div class="absolute top-0 right-0">
                                    <span class="bg-purple-200 rounded-full px-3 py-1 mt-2 mr-2" data-pagefind-filter="Année">
                                        {{ year }}
                                    <span>
                                </div>
                            {% endif %}
                        {% endif%}
                </li>

            {% endif %}
        {% endfor %}
    </ul>
</div>


{% for cours in collections.mon | sort | reverse %}

    <div class="my-3 px-2 p-1 border-solid border-2 rounded relative">
        <div class="text-3xl mb-3">
            <a href="{{ cours.url  }}">{{ cours.data.title }}</a>
        </div>

        <div class=" px-4 flex items-center">
            <div>Auteurs : </div>
            <ul class="flex not-prose list-none my-1 mx-0 px-1 gap-1">
                {% for auteur in cours.data.authors | sort %}
                    <li class="bg-blue-200 rounded-full px-2">{{ auteur }}</li>
                {% endfor %}
            </ul>
        </div>

        {% if cours.data.tags | length > 1 %}
            <div class=" px-4 flex items-center">
                <div>Tags : </div>
                <div class="flex pl-2 gap-1">
                    {% for tag in cours.data.tags | sort %}
                        {% if tag !== 'mon'%}
                            <span class="bg-yellow-200 rounded-full px-2">{{ tag }}</span>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <div class=" pt-1 px-4 flex items-top">
            <div class="flex-none">Résumé : </div>
            <div class="pl-2 m-0 grow quote">
                {% résumé cours %}
            </div>
        </div>

        <div class="hidden sm:block absolute top-0 right-0 bg-purple-200 rounded-full px-2 mt-2 mr-2">
            {% set year = cours.inputPath | getValueFromPath('/', 3) %}
            {{ year }}
        </div>
    </div>

{% endfor %}