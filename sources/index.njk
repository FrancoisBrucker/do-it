---
layout: base-layout.njk
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
<h1> do-it</h1>
{% for post in posts %}
  <article>
    <h1>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h1>
    <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>

{% excerpt post %}

<a href="{{ post.url | url }}"
   aria-label="Read more on {{ post.data.title }}">Read more</a>

  </article>
{% endfor %}
